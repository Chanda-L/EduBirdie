{{> home}}

<h2 class="center-align teal-text">Invite People to Join Your School!</h2>
<div class="row">
    <form action="/Invite/Members" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Placeholder" name="email_field" id="email_field" type="text" class="validate">
          <label for="email_field">Your Email</label>
        </div>
        <div class="input-field col s6">
          <input id="send_to" type="text" class="validate">
          <label for="send_to">Send to: </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input disabled value="{{{code}}}" id="disabled" type="text" class="validate">
          <label for="disabled">Code:</label>
        </div>
      </div>
     <div class="row">
        <div class="input-field col s12">
          <input disabled value="Join my school by getting edubirdie and joining my school and entering: {{{code}}}" id="disabled" type="text" class="validate">
          <label for="disabled">Message: </label>
        </div>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
        
      
    </form>
  </div>
        

  
</body>
</html>