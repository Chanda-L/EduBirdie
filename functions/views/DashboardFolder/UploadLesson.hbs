<style>
    .upload {
        text-align: center;
    }
</style>

<div class="row">
    <div class="col s12 m12">
        <div class="card white darken-1">
            <div class="card-content white-text">
                <span class="card-title">Upload Lesson</span>

                <div class="upload">

                    <button id="uploadLesson" class="waves-effect waves-light btn-large"><i class="material-icons left">cloud</i>Upload</button>
                </div>

            </div>
            <div class="card-action">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header"><i class="material-icons">info</i>Options</div>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                    </li>
                    <li>
                        <div class="collapsible-header"><i class="material-icons">create</i>Details</div>
                        <div class="collapsible-body">
                            <div class="row">
                                <form class="col s12">
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <input id="VideoName" type="text" class="validate">
                                            <label for="first_name">Name</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <input id="VideoDescription" type="text" class="validate">
                                            <label for="last_name">Description</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header"><i class="material-icons">portrait</i>Privacy</div>
                        <div class="collapsible-body">
                            <p>
                                <label>
                                    <input video="privacy" type="checkbox" />
                                    <span>Public</span>
                                </label>
                            </p>
                        </div>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>

